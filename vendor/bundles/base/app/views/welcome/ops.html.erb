		<script type="text/javascript">
		<% Hatio::Bundle.ordered_bundle_list.each do |bundle| %>
		HF.bundle('<%= bundle.name %>', [<%=raw bundle.bootstrap_controllers.collect{|clazz| "'#{clazz}'"}.join(',') %>]);
		<% end %>
		</script>
